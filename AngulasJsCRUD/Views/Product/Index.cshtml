
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div ng-app="myApp" ng-controller="productCtrl">
    <p>Product List</p>
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Operation</th>

        </tr>
        <tr ng-repeat="product in Products">
            <td>{{product.Id}}</td>
            <td>{{product.Name}}</td>
            <td>{{product.Price}}</td>
            <td>
                <span class="btn btn-primary" ng-click=" EditFunction(product)">Edit</span>
                <span class="btn btn-danger" ng-click=" DeleteFunction(product.Id)">Delete</span>

            </td>
        </tr>
    </table>

    <span class="btn btn-success" ng-click="AddProduct()">Add Product</span>
